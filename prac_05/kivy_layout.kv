# This is a Kv file.
# It contains the declarations of the widgets that will be displayed.
BoxLayout:
    orientation: 'vertical'
    Label:
        text: app.status_text
        font_size: 60
        size_hint_y: 0.2  # This takes up 20% of the vertical space
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: "Up"
            on_press: app.handle_press(1)
        Button:
            text: "Down"
            on_press: app.handle_press(-1)
    BoxLayout:
        id: names_box
    Label:  # New label added here
        text: "I did this :)"
        size_hint_y: 0.1  # This sets the height to 10% of the parent layout's height
