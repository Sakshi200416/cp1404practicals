from kivy.app import App
from kivy.uix.boxlayout import BoxLayout
from kivy.uix.label import Label
from kivy.uix.button import Button Â 


class GreetClearApp(App):
    def build(self):
        layout = BoxLayout(orientation='vertical')

        self.greeting_label = Label(text="")
        clear_button = Button(text="Clear", on_press=self.clear_text)
        greet_button = Button(text="Greet", on_press=self.greet_user)

        layout.add_widget(self.greeting_label)
        layout.add_widget(clear_button)
        layout.add_widget(greet_button)

        return layout

    def greet_user(self, instance):
        self.greeting_label.text = "Hello, World!"

    def clear_text(self, instance):
        self.greeting_label.text = ""

if __name__ == '__main__':
    GreetClearApp().run()